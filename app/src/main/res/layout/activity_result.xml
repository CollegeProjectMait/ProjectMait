<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pushDataActivity"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/title"
        android:text="Drop Down Select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/daysspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:entries="@array/days" />

            <Spinner
                android:id="@+id/timeslotsspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:entries="@array/time_slots" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#90A4AE" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@color/theme_red"
            android:padding="16dp"
            android:text="Choose Date"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llreq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/top"
        android:layout_margin="16dp">
        <TextView
            android:id="@+id/tclass"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Class"/>

        <Spinner
            android:id="@+id/classsspinner"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:entries="@array/clas"></Spinner>
        <TextView
            android:id="@+id/troom"
            android:layout_width="match_parent"
            android:layout_height="25dp"
           android:text="Room"/>

        <Spinner
            android:id="@+id/roomspinner"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:entries="@array/rooms"></Spinner>
        <TextView
            android:id="@+id/tteacher"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Teacher"/>

        <Spinner
            android:id="@+id/teacherspinner"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:entries="@array/teachers"></Spinner>
    </LinearLayout>

    <Button
        android:id="@+id/push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="82dp"
        android:background="@drawable/button_design"
        android:padding="16dp"
        android:text="Push"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/push"
        android:layout_marginEnd="101dp"
        android:background="@drawable/button_design"
        android:padding="16dp"
        android:text="Fetch"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_below="@id/llreq"
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="229dp"
        android:textSize="20sp" />

</RelativeLayout>